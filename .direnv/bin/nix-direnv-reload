#!/usr/bin/env bash
set -e
if [[ ! -d "/mnt/sda3/alexandersn/Work/moncarlo/monte_carlo" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/mnt/sda3/alexandersn/Work/moncarlo/monte_carlo")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/mnt/sda3/alexandersn/Work/moncarlo/monte_carlo" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/mnt/sda3/alexandersn/Work/moncarlo/monte_carlo/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/mnt/sda3/alexandersn/Work/moncarlo/monte_carlo/.envrc" "/mnt/sda3/alexandersn/Work/moncarlo/monte_carlo/.direnv"/*.rc
